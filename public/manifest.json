{
  "manifest_version": 3,
  "name": "Coupon Clipper",
  "version": "1.3.2",
  "description": "Conveniently clip digital grocery coupons with one click. Supports Albertsons-owned companies (e.g., Safeway, Vons, Acme and others)",
  "permissions": ["storage", "scripting", "tabs", "activeTab"],
  "host_permissions": [
    "https://*.acmemarkets.com/*",
    "https://*.albertsons.com/*",
    "https://*.andronicos.com/*",
    "https://*.balduccis.com/*",
    "https://*.carrsqc.com/*",
    "https://*.haggen.com/*",
    "https://*.jewelosco.com/*",
    "https://*.kingsfoodmarkets.com/*",
    "https://*.pavilions.com/*",
    "https://*.randalls.com/*",
    "https://*.safeway.com/*",
    "https://*.shaws.com/*",
    "https://*.starmarket.com/*",
    "https://*.tomthumb.com/*",
    "https://*.vons.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-script.js"],
      "matches": [
        "https://*.acmemarkets.com/*",
        "https://*.albertsons.com/*",
        "https://*.andronicos.com/*",
        "https://*.balduccis.com/*",
        "https://*.carrsqc.com/*",
        "https://*.haggen.com/*",
        "https://*.jewelosco.com/*",
        "https://*.kingsfoodmarkets.com/*",
        "https://*.pavilions.com/*",
        "https://*.randalls.com/*",
        "https://*.safeway.com/*",
        "https://*.shaws.com/*",
        "https://*.starmarket.com/*",
        "https://*.tomthumb.com/*",
        "https://*.vons.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.acmemarkets.com/*",
        "https://*.albertsons.com/*",
        "https://*.andronicos.com/*",
        "https://*.balduccis.com/*",
        "https://*.carrsqc.com/*",
        "https://*.haggen.com/*",
        "https://*.jewelosco.com/*",
        "https://*.kingsfoodmarkets.com/*",
        "https://*.pavilions.com/*",
        "https://*.randalls.com/*",
        "https://*.safeway.com/*",
        "https://*.shaws.com/*",
        "https://*.starmarket.com/*",
        "https://*.tomthumb.com/*",
        "https://*.vons.com/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
