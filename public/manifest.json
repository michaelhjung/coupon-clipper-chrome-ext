{
  "manifest_version": 3,
  "name": "Coupon Clipper",
  "version": "0.1.0",
  "description": "Conveniently clip all grocery coupons with a click of a button. Currently supports Safeway and Albertsons online coupons.",
  "permissions": ["scripting", "storage", "activeTab", "tabs"],
  "host_permissions": [
    "https://www.safeway.com/*",
    "https://safeway.com/*",
    "https://www.albertsons.com/*",
    "https://albertsons.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
