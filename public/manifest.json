{
  "manifest_version": 3,
  "name": "Coupon Clipper",
  "version": "0.4.0",
  "description": "Conveniently clip all grocery coupons with a click of a button. Currently supports Safeway, Albertsons, and Vons online coupons.",
  "permissions": ["scripting", "tabs"],
  "host_permissions": [
    "https://*.safeway.com/*",
    "http://*.safeway.com/*",
    "https://*.albertsons.com/*",
    "http://*.albertsons.com/*",
    "https://*.vons.com/*",
    "http://*.vons.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
